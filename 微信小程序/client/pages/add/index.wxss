/* pages/image/image.wxss */
 @import '../../utils/nullTip/nullTip.wxss'; 
.gallery {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 60rpx;

}

.gallery::before, .gallery::after, .gallery-item::before, .gallery-item::after {
    content: '';
    display: block;
    position: absolute;
    background-color: #e5e5e5;
}

.gallery::before, .gallery::after {
    top: 0;
    left: 0;
}

.gallery-item::before, .gallery-item::after {
    bottom: 0;
    right: 0;
}

.gallery::before, .gallery-item::before {
    width: 100%;
    height: 1px;
    transform: scaleY(0.5);
}

.gallery::after, .gallery-item::after {
    width: 1px;
    height: 100%;
    transform: scaleX(0.5);
}

.gallery-item {
   
     width: 31%;
  height: 200rpx;
  position: relative;
  left: 3%;
  margin-right:2%;
  margin-bottom:10rpx;
  float: left;
}

.gallery-item-cover {
    width: 100%;
    height: 100%;
